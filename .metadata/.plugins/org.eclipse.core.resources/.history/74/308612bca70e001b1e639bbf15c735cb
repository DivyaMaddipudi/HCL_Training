package day_1_hcl;

import java.util.Scanner;

public class DemoPrime {
	
	public static void main(String[] args) {
		
		//modularity: functions
		
		public boolean primeChecker(int number) {
			boolean isPrime = true; //let assume num is a prime num
			
			for(int i=2;i<number/2;i++) {
				if(number%i==0) {
					isPrime = false;
					break;
				}
			}
			
		}
		//Check for prime number
		//1. take the value from the user
		
		System.out.println("Plz enter some number:");
		Scanner scanner = new Scanner(System.in);
		int number = scanner.nextInt();
		
		
		
		if(isPrime == true) {
			System.out.println("It is a prime num");
		} else {
			System.out.println("It is not a prime num");
		}
		
	}

}
