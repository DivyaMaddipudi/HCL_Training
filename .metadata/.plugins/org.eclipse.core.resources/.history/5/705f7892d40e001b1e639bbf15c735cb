package day_1_hcl;

public class PrintNextDate {
	
	public static boolean isLeapYear(int year) {
		
		boolean isLeapYear = false;
		if((year % 4 == 0) || (year%100 != 0) && (year%4 == 0))  {
			isLeapYear = true;
		}
		return isLeapYear;
	}
	
	
	
